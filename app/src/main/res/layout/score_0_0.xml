<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hzdl.teacher.activity.CourseActivity">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/btn_white_normal"
        android:layout_weight="5"
        >

        <ImageView
            android:id="@+id/iv_puzi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:src="@mipmap/a1235"/>

        <ImageView
            android:tag="1"
            android:id="@+id/id1"
            style="@style/puziyinfu_bg_02" />
        <ImageView
            android:tag="1"
            android:id="@+id/id2"
            style="@style/puziyinfu_bg_02" />
        <ImageView
            android:tag="1"
            android:id="@+id/id3"
            style="@style/puziyinfu_bg_02" />
        <ImageView
            android:tag="1"
            android:id="@+id/id4"
            style="@style/puziyinfu_bg_02" />
        <ImageView
            android:tag="1"
            android:id="@+id/id5"
            style="@style/puziyinfu_bg_02" />
        <ImageView
            android:tag="1"
            android:id="@+id/id6"
            style="@style/puziyinfu_bg_02" />
        <ImageView
            android:tag="1"
            android:id="@+id/id7"
            style="@style/puziyinfu_bg_02" />
        <ImageView
            android:tag="1"
            android:id="@+id/id8"
            style="@style/puziyinfu_bg_02" />
        <ImageView
            android:tag="1"
            android:id="@+id/id9"
            style="@style/puziyinfu_bg_02" />
        <ImageView
            android:tag="1"
            android:id="@+id/id10"
            style="@style/puziyinfu_bg_02" />
        <ImageView
            android:tag="1"
            android:id="@+id/id11"
            style="@style/puziyinfu_bg_02" />
        <ImageView
            android:tag="1"
            android:id="@+id/id12"
            style="@style/puziyinfu_bg_02" />



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        >
        <include android:layout_width="match_parent" android:layout_height="match_parent" layout="@layout/view_score_bottom" />
    </RelativeLayout>

</LinearLayout>
