<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hzdl.teacher.activity.CourseActivity">

        <!--白色按键-->
        <LinearLayout
            android:id="@+id/white_keys"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:layout_alignParentBottom="true"
            android:background="@mipmap/kc_keyboard_bg"
            android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_white_key1"
                    style="@style/white_key_style"/>

                <ImageView
                    android:id="@+id/iv_white_key2"
                    style="@style/white_key_style"/>

                <ImageView
                    android:id="@+id/iv_white_key3"
                    style="@style/white_key_style"/>

                <ImageView
                    android:id="@+id/iv_white_key4"
                    style="@style/white_key_style"/>

                <ImageView
                    android:id="@+id/iv_white_key5"
                    style="@style/white_key_style"/>

                <ImageView
                    android:id="@+id/iv_white_key6"
                    style="@style/white_key_style"/>

                <ImageView
                    android:id="@+id/iv_white_key7"
                    style="@style/white_key_style"/>

                <ImageView
                    android:id="@+id/iv_white_key8"
                    style="@style/white_key_style"/>

                <ImageView
                    android:id="@+id/iv_white_key9"
                    style="@style/white_key_style"/>

                <ImageView
                    android:id="@+id/iv_white_key10"
                    style="@style/white_key_style"/>

                <ImageView
                    android:id="@+id/iv_white_key11"
                    style="@style/white_key_style"/>

                <ImageView
                    android:id="@+id/iv_white_key12"
                    style="@style/white_key_style"/>

                <ImageView
                    android:id="@+id/iv_white_key13"
                    style="@style/white_key_style"/>

                <ImageView
                    android:id="@+id/iv_white_key14"
                    style="@style/white_key_style"/>

                <ImageView
                    android:id="@+id/iv_white_key15"
                    style="@style/white_key_style"/>
        </LinearLayout>
        <!--黑色按键-->
        <LinearLayout
            android:id="@+id/black_keys"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/white_keys">

                <ImageView
                    android:id="@+id/iv_black_key1"
                    style="@style/black_key_style"
                    android:layout_marginLeft="60dp"/>

                <ImageView
                    android:id="@+id/iv_black_key2"
                    style="@style/black_key_style"
                    android:layout_marginLeft="38dp"/>

                <ImageView
                    android:id="@+id/iv_black_key3"
                    style="@style/black_key_style"
                    android:layout_marginLeft="120dp"
                    />

                <ImageView
                    android:id="@+id/iv_black_key4"
                    style="@style/black_key_style"
                    android:layout_marginLeft="38dp"/>

                <ImageView
                    android:id="@+id/iv_black_key5"
                    style="@style/black_key_style"
                    android:layout_marginLeft="38dp"
                    />

                <ImageView
                    android:id="@+id/iv_black_key6"
                    style="@style/black_key_style"
                    android:layout_marginLeft="118dp"
                    />

                <ImageView
                    android:id="@+id/iv_black_key7"
                    style="@style/black_key_style"
                    android:layout_marginLeft="38dp"
                    />

                <ImageView
                    android:id="@+id/iv_black_key8"
                    style="@style/black_key_style"
                    android:layout_marginLeft="118dp"
                    />

                <ImageView
                    android:id="@+id/iv_black_key9"
                    style="@style/black_key_style"
                    android:layout_marginLeft="38dp"
                    />

                <ImageView
                    android:id="@+id/iv_black_key10"
                    style="@style/black_key_style"
                    android:layout_marginLeft="38dp" />
        </LinearLayout>

</RelativeLayout>
