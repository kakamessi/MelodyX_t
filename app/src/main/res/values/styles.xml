<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ThemeSplash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@mipmap/bg_login</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyTabLayoutTextAppearanceInverse" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">20sp</item>
    </style>

    <!--乐谱遮盖框的样式-->
    <style name="puziyinfu_bg">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">110dp</item>
        <!--<item name="android:src">@mipmap/kc_red_puzi_bg</item>-->
        <item name="android:scaleType">fitXY</item>
    </style>
    <!--乐谱遮盖框的样式_02-->
    <style name="puziyinfu_bg_02">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">70dp</item>
        <!--<item name="android:src">@mipmap/kc_red_puzi_bg</item>-->
        <item name="android:scaleType">fitXY</item>
    </style>
    <!--乐谱遮盖框的样式_03-->
    <style name="puziyinfu_bg_03">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">66dp</item>
        <item name="android:layout_gravity">bottom</item>
        <!--<item name="android:src">@mipmap/kc_red_puzi_bg</item>-->
        <item name="android:scaleType">fitXY</item>
    </style>
    <!--键盘黑色按键样式-->
    <style name="black_key_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@mipmap/kc_black_key</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    <!--键盘白色按键样式-->
    <style name="white_key_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:src">@mipmap/kc_white_key</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_marginRight">1dp</item>
    </style>

</resources>
