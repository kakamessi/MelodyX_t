<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hzdl.teacher.activity.CourseActivity">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/btn_white_normal"
        android:layout_weight="5"
        >

        <ImageView
            android:id="@+id/iv_puzi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:src="@mipmap/a1332"/>

        <ImageView
            android:tag="1"
            android:id="@+id/id10"
            style="@style/puziyinfu_bg_02"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/id11"
            android:layout_toStartOf="@+id/id11"
            android:layout_marginRight="58dp"
            android:layout_marginEnd="58dp" />

        <ImageView
            android:tag="7"
            android:id="@+id/id9"
            style="@style/puziyinfu_bg_02"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/id10"
            android:layout_toStartOf="@+id/id10"
            android:layout_marginRight="52dp"
            android:layout_marginEnd="52dp" />

        <ImageView
            android:tag="6"
            android:id="@+id/id8"
            style="@style/puziyinfu_bg_02"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/id9"
            android:layout_toStartOf="@+id/id9"
            android:layout_marginRight="54dp"
            android:layout_marginEnd="54dp" />

        <ImageView
            android:tag="5"
            android:id="@+id/id7"
            style="@style/puziyinfu_bg_02"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/id8"
            android:layout_toStartOf="@+id/id8"
            android:layout_marginRight="188dp"
            android:layout_marginEnd="188dp" />

        <ImageView
            android:tag="10"
            android:id="@+id/id12"
            style="@style/puziyinfu_bg_02"
            android:layout_marginRight="202dp"
            android:layout_marginEnd="202dp"
            android:layout_alignTop="@+id/id11"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="22dp" />

        <ImageView
            android:tag="9"
            android:id="@+id/id11"
            style="@style/puziyinfu_bg_02"
            android:layout_marginRight="65dp"
            android:layout_marginEnd="65dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/id12"
            android:layout_toStartOf="@+id/id12" />

        <ImageView
            android:tag="4"
            android:id="@+id/id6"
            style="@style/puziyinfu_bg_02"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/id7"
            android:layout_toStartOf="@+id/id7"
            android:layout_marginRight="65dp"
            android:layout_marginEnd="65dp" />

        <ImageView
            android:tag="3"
            android:id="@+id/id5"
            style="@style/puziyinfu_bg_02"
            android:layout_alignTop="@+id/id6"
            android:layout_toLeftOf="@+id/id6"
            android:layout_toStartOf="@+id/id6"
            android:layout_marginRight="53dp"
            android:layout_marginEnd="53dp" />

        <ImageView
            android:tag="2"
            android:id="@+id/id4"
            style="@style/puziyinfu_bg_02"
            android:layout_alignTop="@+id/id12"
            android:layout_toLeftOf="@+id/id5"
            android:layout_toStartOf="@+id/id5"
            android:layout_marginRight="51dp"
            android:layout_marginEnd="51dp" />

        <ImageView
            android:tag="1"
            android:id="@+id/id3"
            style="@style/puziyinfu_bg_02"
            android:layout_marginLeft="51dp"
            android:layout_marginStart="51dp"
            android:layout_alignTop="@+id/id4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        >
        <include android:layout_width="match_parent" android:layout_height="match_parent" layout="@layout/view_score_bottom" />
    </RelativeLayout>

</LinearLayout>
