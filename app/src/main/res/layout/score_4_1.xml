<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hzdl.teacher.activity.CourseActivity">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/btn_white_normal"
        android:layout_weight="5"
        >

        <ImageView
            android:id="@+id/iv_puzi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:src="@mipmap/a1432"/>

        <ImageView
            android:tag="12"
            android:id="@+id/id12"
            style="@style/puziyinfu_bg_02"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="114dp"
            android:layout_marginEnd="114dp"
            android:layout_marginTop="228dp" />

        <ImageView
            android:tag="11"
            android:id="@+id/id11"
            style="@style/puziyinfu_bg_02"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/id12"
            android:layout_toStartOf="@+id/id12"
            android:layout_marginRight="40dp"
            android:layout_marginEnd="40dp" />

        <ImageView
            android:tag="10"
            android:id="@+id/id10"
            style="@style/puziyinfu_bg_02"
            android:layout_alignTop="@+id/id12"
            android:layout_toLeftOf="@+id/id11"
            android:layout_toStartOf="@+id/id11"
            android:layout_marginRight="34dp"
            android:layout_marginEnd="34dp" />

        <ImageView
            android:tag="9"
            android:id="@+id/id9"
            style="@style/puziyinfu_bg_02"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/id10"
            android:layout_toStartOf="@+id/id10"
            android:layout_marginRight="111dp"
            android:layout_marginEnd="111dp" />

        <ImageView
            android:tag="8"
            android:id="@+id/id8"
            style="@style/puziyinfu_bg_02"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/id9"
            android:layout_toStartOf="@+id/id9"
            android:layout_marginRight="32dp"
            android:layout_marginEnd="32dp" />

        <ImageView
            android:tag="7"
            android:id="@+id/id7"
            style="@style/puziyinfu_bg_02"
            android:layout_alignTop="@+id/id8"
            android:layout_toLeftOf="@+id/id8"
            android:layout_toStartOf="@+id/id8"
            android:layout_marginRight="39dp"
            android:layout_marginEnd="39dp" />

        <ImageView
            android:tag="6"
            android:id="@+id/id6"
            style="@style/puziyinfu_bg_02"
            android:layout_alignTop="@+id/id7"
            android:layout_toLeftOf="@+id/id7"
            android:layout_toStartOf="@+id/id7"
            android:layout_marginRight="111dp"
            android:layout_marginEnd="111dp" />

        <ImageView
            android:tag="5"
            android:id="@+id/id5"
            style="@style/puziyinfu_bg_02"
            android:layout_alignTop="@+id/id10"
            android:layout_toLeftOf="@+id/id6"
            android:layout_toStartOf="@+id/id6"
            android:layout_marginRight="38dp"
            android:layout_marginEnd="38dp" />

        <ImageView
            android:tag="4"
            android:id="@+id/id4"
            style="@style/puziyinfu_bg_02"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/id5"
            android:layout_toStartOf="@+id/id5"
            android:layout_marginRight="35dp"
            android:layout_marginEnd="35dp" />

        <ImageView
            android:tag="3"
            android:id="@+id/id3"
            style="@style/puziyinfu_bg_02"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/id4"
            android:layout_toStartOf="@+id/id4"
            android:layout_marginRight="107dp"
            android:layout_marginEnd="107dp" />

        <ImageView
            android:tag="2"
            android:id="@+id/id2"
            style="@style/puziyinfu_bg_02"
            android:layout_alignTop="@+id/id5"
            android:layout_toLeftOf="@+id/id3"
            android:layout_toStartOf="@+id/id3"
            android:layout_marginRight="40dp"
            android:layout_marginEnd="40dp" />

        <ImageView
            android:tag="1"
            android:id="@+id/id1"
            style="@style/puziyinfu_bg_02"
            android:layout_alignTop="@+id/id2"
            android:layout_toLeftOf="@+id/id2"
            android:layout_toStartOf="@+id/id2"
            android:layout_marginRight="37dp"
            android:layout_marginEnd="37dp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        >
        <include android:layout_width="match_parent" android:layout_height="match_parent" layout="@layout/view_score_bottom" />
    </RelativeLayout>

</LinearLayout>
